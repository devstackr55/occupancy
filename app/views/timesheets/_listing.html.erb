<%- model_class = Timesheet -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:employee_project_id) %></th>
      <th><%= model_class.human_attribute_name(:working_hours) %></th>
      <th><%= model_class.human_attribute_name(:comments) %></th>
      <th><%= model_class.human_attribute_name(:references) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.project.name %></td>
        <td><%= timesheet.working_hours %></td>
        <td><%= timesheet.comments %></td>
        <td><%= timesheet.references %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
          employee_timesheet_path(@employee, timesheet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_employee_timesheet_path(@employee, timesheet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_timesheet_path(@employee, timesheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

