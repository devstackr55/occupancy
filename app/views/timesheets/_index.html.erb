<table class="table table-striped">
  <thead>
    <tr>
      <th>Project</th>
      <th>Task</th>
      <th>Logged hours</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.project.name %></td>
        <td><%= timesheet.task_type %></td>
        <td><%= timesheet.working_hours %></td>
        <td>
          <%= link_to edit_employee_timesheet_path(@employee, timesheet), remote: true, class: 'btn btn-sm btn-primary' do%>
            <i class="bi bi-pen"></i>
          <%end%>
          <%= link_to employee_timesheet_path(@employee, timesheet),
                      :method => :delete,
                      remote: true,
                      :data => { :confirm => 'Are you sure?'},
                      :class => 'btn btn-sm btn-danger' do %>
            <i class="bi bi-trash"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

