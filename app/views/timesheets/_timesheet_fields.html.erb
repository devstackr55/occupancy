    </div>
    <%=ff.error_span(:comments) %>
</div>

<div class="form-group">
    <%= ff.label :references, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= ff.text_area :references, :class => 'form-control' %>
    </div>
    <%=ff.error_span(:references) %>
</div>

<div class="form-group">
    <%= ff.label :state, :class => 'control-label col-lg-2' %>
