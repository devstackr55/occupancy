        <%= ff.number_field :working_hours, step: :any, :class => 'form-control' %>
    </div>
    <%=ff.error_span(:working_hours) %>
</div>


<div class="form-group">
    <%= ff.label :comments, :class => 'control-label col-lg-2' %>
