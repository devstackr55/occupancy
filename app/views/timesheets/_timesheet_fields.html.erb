<div class="form-group">
    <%= ff.label :employee_project_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= ff.select :employee_project_id, @employee.projects.pluck(:name, :id), :class => 'form-control', prompt: true %>
    </div>
    <%= ff.error_span(:employee_project_id) %>
</div>

<div class="form-group">
    <%= ff.label :billing_hours, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= ff.number_field :billing_hours, step: :any, :class => 'form-control' %>
    </div>
    <%=ff.error_span(:billing_hours) %>
</div>

<div class="form-group">
    <%= ff.label :working_hours, :class => 'control-label col-lg-2' %>
