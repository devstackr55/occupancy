<%- model_class = Timesheet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_project_id) %>:</strong></dt>
  <dd><%= @timesheet.employee_project_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:billing_hours) %>:</strong></dt>
  <dd><%= @timesheet.billing_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:working_hours) %>:</strong></dt>
  <dd><%= @timesheet.working_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:on_date) %>:</strong></dt>
  <dd><%= @timesheet.on_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @timesheet.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:references) %>:</strong></dt>
  <dd><%= @timesheet.references %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @timesheet.state %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), employee_timesheets_path(@employee), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
edit_employee_timesheet_path(@employee, @timesheet), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
employee_timesheet_path(@employee, @timesheet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
